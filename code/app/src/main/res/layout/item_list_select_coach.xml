<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@drawable/bg_shape_white"
    android:gravity="center_vertical"
    android:minHeight="76dp"
    android:orientation="horizontal">


    <cn.fizzo.fizzosync.ui.widget.circular.CircularImage
        android:id="@+id/iv_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="22dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/tv_mostly"
        android:layout_marginLeft="8dp"
        android:textSize="15.7dp" />

    <TextView
        android:id="@+id/tv_stu_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_secondly"
        android:textSize="11.7dp" />

    <View
        android:layout_width="7dp"
        android:layout_height="13dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/ic_arrow_right_gray" />

</LinearLayout>